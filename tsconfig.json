{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021"],
    "rootDirs": [
      "src",
      "framework"
    ],
    "paths": {
      "src": [
        "src",
        "src/*"
      ],
      "framework": [
        "framework",
        "framework/*"
      ]
    },
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true
  }
}
